  {
    "rules": {
      "book":{
          ".read": true,
          ".write": "root.child('user').child(auth.uid).child('role').val() == 'admin'"
      },
      "book_author":{
          ".read": true,
          ".write": "root.child('user').child(auth.uid).child('role').val() == 'admin'"
      },
      "book_genre":{
          ".read": true,
          ".write": "root.child('user').child(auth.uid).child('role').val() == 'admin'"
      },
      "order": {
        ".read": "root.child('user').child(auth.uid).child('role').val() == 'admin'",
        ".write": "root.child('user').child(auth.uid).child('role').val() == 'admin'",
        "$uid": {
          // Allow only authenticated content owners access to their data
          ".read": "auth.uid == $uid",
          ".write": "auth.uid == $uid"
        }
      },  
      "user": {
        ".read": "root.child('user').child(auth.uid).child('role').val() == 'admin'",
        ".write": "root.child('user').child(auth.uid).child('role').val() == 'admin'",
        "$uid": {
          // Allow only authenticated content owners access to their data
          ".read": "auth.uid == $uid",
          ".write": "auth.uid == $uid"
        }
      }
    }
  }
